{% extends 'base.html.twig' %}

{% block content %}
    <div>
        <h2>基本情報</h2>
        <table border="1">
            <tr>
                <th>user_id</th>
                <td>{{ user.user_id }}</td>
            </tr>
            <tr>
                <th>login</th>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <th>name</th>
                <td>{{ user.name }}</td>
            </tr>
        </table>
    </div>
    <div>
        <h2>ロール一覧</h2>
        <table border="1">
            {% for role in user.roles %}
                <tr>
                    <td>{{ role }}</td>
                    <td>削除</td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div>
        <h2>フォーム追加</h2>
        <form action="{{ path_for('user_add_role', user) }}" method="post">
            <input type="text" name="role">
            <button type="submit">追加</button>
        </form>

    </div>
{% endblock %}
