{% extends 'base.html.twig' %}

{% block title %}php-auth{% endblock %}

{% block content %}
    <h1>php-auth</h1>
    <p>{{ base_url() }}</p>
    <p>{{ current_path() }}</p>
    <a href="{{ path_for('update', {}, {rd: base_url()}) }}">Update</a> |
    <a href="{{ path_for('login', {}, {rd: base_url()}) }}">ログイン</a> |
    <a href="{{ path_for('logout', {}, {rd: base_url()}) }}">ログアウト</a>
    <pre>{{ dump(session) }}</pre>
    <pre>{{ dump(uri) }}</pre>
    <pre>{{ dump(env) }}</pre>
{% endblock %}
